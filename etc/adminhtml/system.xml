<?xml version="1.0"?>

<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="payment">
            
            <group id="sellixpay" translate="label comment" type="text" sortOrder="310" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Sellix Pay</label>
                <comment><![CDATA[<strong>Accept Cryptocurrencies, Credit Cards, PayPal and regional banking methods with Sellix Pay.</strong>]]></comment>
                
                <field id="active" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Enabled</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="debug" translate="label" type="select" sortOrder="15" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Debug Mode</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="title" translate="label" type="text" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Title</label>
                    <validate>required-entry</validate>
                    <comment>This controls the title which the user sees during checkout.</comment>
                </field>
                <field id="instructions" translate="label" type="textarea" sortOrder="22" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Description</label>
                    <comment>This controls the description which the user sees during checkout.</comment>
                </field>
                <field id="email" translate="label" type="text" sortOrder="26" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Email</label>
                    <validate>required-entry</validate>
                    <comment>Please enter your Sellix email.</comment>
                </field>
                <field id="api_key" translate="label" type="text" sortOrder="27" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>API Key</label>
                    <validate>required-entry</validate>
                    <comment>Please enter your Sellix email.</comment>
                </field>
                <field id="order_id_prefix" translate="label" type="text" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Order Prefix</label>
                    <comment>The prefix before the order number. For example, a prefix of "Order #" and a ID of "10" will result in "Order #10"</comment>
                </field>
                <field id="payment_fields_layout" translate="label" type="select" sortOrder="32" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Radio Box Layout Enabled</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <comment>Default layout is dropdown</comment>
                </field>
                <field id="confirmations" translate="label" type="text" sortOrder="34" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Number of confirmations for crypto currencies</label>
                    <comment>The default of 1 is advised for both speed and security</comment>
                </field>
                <field id="paypal" translate="label" type="select" sortOrder="36" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Accept PayPal</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="stripe" translate="label" type="select" sortOrder="37" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Accept Stripe</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="bitcoin" translate="label" type="select" sortOrder="38" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Accept Bitcoin</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="concordium" translate="label" type="select" sortOrder="39" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Accept Concordium</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="tron" translate="label" type="select" sortOrder="40" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Accept Tron</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="litecoin" translate="label" type="select" sortOrder="42" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Accept Litecoin</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="ethereum" translate="label" type="select" sortOrder="43" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Accept Ethereum</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="bitcoin_cash" translate="label" type="select" sortOrder="44" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Accept Bitcoin Cash</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="usdt" translate="label" type="select" sortOrder="45" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Accept USDT</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <comment>You have to select one from below USDT:ERC20 , USDT:BEP20 OR USDT:TRC20 if enable usdt</comment>
                </field>
                <field id="usdt_erc20" translate="label" type="select" sortOrder="46" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Accept USDT:ERC20</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="usdt_bep20" translate="label" type="select" sortOrder="47" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Accept USDT:BEP20</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="usdt_trc20" translate="label" type="select" sortOrder="48" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Accept USDT:TRC20</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="usdc" translate="label" type="select" sortOrder="50" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Accept USDC</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <comment>You have to select one from below USDC:ERC20 OR USDC:BEP20 if enable usdc</comment>
                </field>
                <field id="usdc_erc20" translate="label" type="select" sortOrder="51" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Accept USDC:ERC20</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="usdc_bep20" translate="label" type="select" sortOrder="52" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Accept USDC:BEP20</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="solana" translate="label" type="select" sortOrder="53" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Accept Solana</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="nano" translate="label" type="select" sortOrder="54" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Accept Nano</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="ripple" translate="label" type="select" sortOrder="55" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Accept Ripple</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="cronos" translate="label" type="select" sortOrder="56" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Accept Cronos</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="binance_coin" translate="label" type="select" sortOrder="57" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Accept Binance Coin</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="binance_pay" translate="label" type="select" sortOrder="58" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Accept Binance Pay</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="monero" translate="label" type="select" sortOrder="59" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Accept Monero</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="skrill" translate="label" type="select" sortOrder="60" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Accept Skrill</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="perfectmoney" translate="label" type="select" sortOrder="61" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Accept PerfectMoney</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="sort_order" translate="label" type="text" sortOrder="140" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Sort Order</label>
                </field>
            </group>
        </section>
    </system>
</config>